<?xml version="1.0" encoding="utf-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms" xmlns:grial="clr-namespace:AppName.Core;assembly=AppName.Core"
	x:Class="AppName.FullHeaderArticleGalleryItemTemplate">
    <ContentView.Content>
        <!-- IMAGE -->
        <ffimageloading:CachedImage
			Aspect="AspectFill"
			HorizontalOptions="Fill"
			Source="{ Binding BackgroundImage }"
			grial:Effects.CornerRadius="5" />
    </ContentView.Content>
</ContentView>