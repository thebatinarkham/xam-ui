<?xml version="1.0" encoding="utf-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:AppName" xmlns:grial="clr-namespace:AppName.Core;assembly=AppName.Core"
	x:Class="AppName.NavigationCardsDescriptionListItemTemplate">
    <ContentView.Content>
        
        <grial:CardView
			Padding="20,20"
			Margin="10"
			RowSpacing="16"
			CornerRadius="5">
            <grial:CardView.ColumnDefinitions>
                <ColumnDefinition
					Width="*" />
                <ColumnDefinition
					Width="Auto" />
            </grial:CardView.ColumnDefinitions>
        
            <grial:CardView.RowDefinitions>
                <RowDefinition
					Height="22" />
                <RowDefinition
					Height="*" />
            </grial:CardView.RowDefinitions>
            
            <Label
				Grid.Row="0"
				Grid.Column="0"
				Grid.ColumnSpan="2"
				Style="{ StaticResource LabelBoldStyle }"
				Text="{ Binding Name }"
				FontSize="14"
				VerticalOptions="Center" />
            
            <Label
				Grid.Row="1"
				Grid.Column="0"
				Grid.ColumnSpan="2"
				Text="{ Binding Description }"
				FontSize="14" />
            
        </grial:CardView>
        
    </ContentView.Content>
    
</ContentView>
