<?xml version="1.0" encoding="utf-8"?>
<local:WalkthroughBasePage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="AppName.WalkthroughPage" xmlns:grial="clr-namespace:AppName.Core;assembly=AppName.Core" xmlns:local="clr-namespace:AppName"
	NavigationPage.HasNavigationBar="False">

    <local:WalkthroughStepItemTemplate
		BackgroundColor="{ DynamicResource BasePageColor}"
		Header="{ grial:Translate WalkthroughHeaderWelcome }"
		Text="{ grial:Translate WalkthroughTextWelcome }"
		IconText="{ x:Static local:GrialIconsFont.Globe }"
		IconColor="#5F7DD4"
		ButtonBackgroundColor="#5F7DD4"
		ButtonText="{ grial:Translate StringNext }" />

    <local:WalkthroughStepItemTemplate
		BackgroundColor="{ DynamicResource BasePageColor}"
		Header="{ grial:Translate WalkthroughHeaderSaveTime }"
		Text="{ grial:Translate WalkthroughTextSaveTime }"
		IconText="{ x:Static local:GrialIconsFont.Lightning }"
		IconColor="#7C4ECD"
		ButtonBackgroundColor="#7C4ECD"
		ButtonText="{ grial:Translate StringNext }" />
    
    <local:WalkthroughStepItemTemplate
		BackgroundColor="{ DynamicResource BasePageColor}"
		Header="{ grial:Translate WalkthroughHeaderLearn }"
		Text="{ grial:Translate WalkthroughTextLearn }"
		IconText="{ x:Static local:GrialIconsFont.School }"
		IconColor="#E51E61"
		ButtonBackgroundColor="#E51E61"
		ButtonText="{ grial:Translate StringFinish }" />

</local:WalkthroughBasePage>