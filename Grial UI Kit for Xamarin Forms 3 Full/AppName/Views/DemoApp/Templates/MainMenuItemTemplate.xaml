<?xml version="1.0" encoding="utf-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:grial="clr-namespace:AppName.Core;assembly=AppName.Core" xmlns:local="clr-namespace:AppName" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="AppName.MainMenuItemTemplate">
    
    <Grid
		Padding="30,0">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition
				Width="30" />
            <ColumnDefinition
				Width="*" />
        </Grid.ColumnDefinitions>

        <!-- ICON -->
        <Label
			Grid.Column="0"
			Text="{ Binding Icon }"
			HorizontalOptions="Start"
			Style="{ StaticResource MainMenuIconStyle }"
			VerticalTextAlignment="Center" />

        <!-- LABEL -->
        <Label
			Grid.Column="1"
			Text="{ Binding Name }"
			Margin="{ DynamicResource MainMenuFullLabelMargin }"
			Style="{ StaticResource MainMenuLabelStyle }"
			VerticalTextAlignment="Center" />
        
    </Grid>

</ContentView>