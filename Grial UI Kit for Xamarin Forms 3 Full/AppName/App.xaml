            <!-- CHECKBOX TEMPLATE -->
            <Style
				TargetType="grial:Checkbox">
                <Setter
					Property="ControlTemplate">
                    <Setter.Value>
                        <ControlTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition
										Width="Auto" />
                                    <ColumnDefinition
										Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Grid
									x:Name="Unchecked"
									Grid.Column="0">
                                    <!-- OUTER CIRCLE -->
                                    <Frame
										Padding="0"
										CornerRadius="13"
										WidthRequest="26"
										HeightRequest="26"
										VerticalOptions="Center"
										HorizontalOptions="Center"
										HasShadow="False"
										BackgroundColor="{ TemplateBinding UncheckedBackgroundColor }"
										OutlineColor="{ TemplateBinding UncheckedBorderColor }" />
                                </Grid>

                                <Grid
									x:Name="Checked"
									Grid.Column="0">
                                    <!-- INNER CIRCLE -->
                                    <Frame
										Padding="0"
										CornerRadius="13"
										WidthRequest="26"
										HeightRequest="26"
										VerticalOptions="Center"
										HorizontalOptions="Center"
										HasShadow="False"
										BackgroundColor="Transparent"
										OutlineColor="{ TemplateBinding CheckedBorderColor }">
                                        <!-- OUTER CIRCLE -->
                                        <Frame
											Margin="3"
											CornerRadius="10"
											WidthRequest="20"
											HeightRequest="20"
											VerticalOptions="Center"
											HorizontalOptions="Center"
											HasShadow="False"
											BackgroundColor="{ TemplateBinding CheckedBackgroundColor }"
											OutlineColor="Transparent" />
                                    </Frame>

                                    <!-- CHECK -->
                                    <Label
										Style="{ DynamicResource FontIconFill }"
										Text="{ x:Static local:GrialIconsFont.Check }"
										TextColor="{ TemplateBinding IconColor }"
										FontSize="{ TemplateBinding IconFontSize }"
										HorizontalOptions="Center"
										VerticalOptions="Center" />
                                </Grid>

                                <ContentPresenter
									Grid.Column="1"
									VerticalOptions="Center" />
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Setter
					Property="IconFontSize"
					Value="13" />
                <Setter
					Property="HeightRequest"
					Value="26" />
                <Setter
					Property="HorizontalOptions"
					Value="Start" />
                <Setter
					Property="CheckedBackgroundColor"
