<?xml version="1.0" encoding="utf-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="AppName.BrandBlock" xmlns:grial="clr-namespace:AppName.Core;assembly=AppName.Core">
    <Grid
		ColumnSpacing="10"
		Padding="0"
		Style="{ StaticResource BrandContainerStyle }">
        <Grid.ColumnDefinitions>
            <ColumnDefinition
				Width="Auto" />
            <ColumnDefinition
				Width="Auto" />
        </Grid.ColumnDefinitions>

        <Image
			Grid.Column="0"
			HeightRequest="64"
			WidthRequest="64"
			Source="{ StaticResource BrandImage }"
			BackgroundColor="{ DynamicResource BrandBlockBackgroundColor }" />

        <StackLayout
			Grid.Column="1"
			Orientation="Vertical"
			HorizontalOptions="Start"
			VerticalOptions="Center"
			Spacing="0">
            <Label
				Style="{ StaticResource BrandNameStyle }"
				Text="{ grial:Translate StringGrial }"
				VerticalTextAlignment="Start" />

            <Label
				Style="{ StaticResource BrandNameStyle }"
				Text="{ grial:Translate StringUIKIT }"
				VerticalTextAlignment="Start" />
        </StackLayout>

    </Grid>

</ContentView>
